// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Frontend Build",
            "type": "npm",
            "script": "build",
            "options": {
                "cwd": "${workspaceRoot}/frontend"
            }
        },
        {
            "label": "Backend Build",
            "type": "npm",
            "script": "watch /backend",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Frontend Build",
            ]
        }
    ]
}